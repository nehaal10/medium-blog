generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email_id String
  password String
  blogs Blog[]
  blogs_ids String[]
  is_active Boolean @default(true)
  is_deleted Boolean @default(false)
  create_by String
  created_on DateTime
  updated_by String
  updated_on DateTime

  @@unique([id, email_id])
}

model Blog {
  id String @id @default(uuid())
  owner_id String
  owner User @relation(fields: [owner_id], references: [id])
  blogs Json
  is_deleted Boolean @default(false)
  create_by String
  created_on DateTime
  updated_by String
  updated_on DateTime
}